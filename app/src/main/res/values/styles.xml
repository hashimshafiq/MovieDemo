<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SubHeading" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="AppTheme.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>